<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h1>URL SHORTNER</h1>
        <!-- form  to handle shortening of urls, input also-->
        <form class="my-4 form-inline" action="/shortUrls" method ='POST'>
            <label for="longUrl" class="sr-only">URL</label>
            <input placeholder='Url'type="url" name="longUrl"  class='form-control col mr-2' id="LongUrl">
            <button class='btn btn-success 'type="submit">Shorten</button>
        </form>

        <!-- table to handle display list of shortened urls  -->

        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th>Initial URL</th>
                    <th>Short URL</th>
                    <th>clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                      <td><a href="<%= shortUrl.long %>"><%= shortUrl.long %></a></td>
                      <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                      <td><%= shortUrl.clicks %></td>
                    </tr>
                  <% }) %>
               
            </tbody>
        </table>
    </div>    
</body>
</html>